<mvc:View controllerName="com.lab2dev.projetobrowseorders.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <App>
        <Page id="page" title="{i18n>title}">
        <subHeader>
        <OverflowToolbar>
            <SearchField liveChange="onSearch" width="20%" />
        </OverflowToolbar>
        </subHeader>
        <content>
            <List
                id="list"
                items="{orders>/}">
                <ObjectListItem 
                    title=" Order {orders>OrderID}"
                    number="{orders>OrderDate}">
                    <firstStatus>
                        <ObjectStatus
                            text="{parameters: { ShippedDate: '{orders>ShippedDate}', OrderDate: '{orders>OrderDate}' }
                            }"
                            state="Success"
                            />
                    </firstStatus>
                    <ObjectAttribute text="{orders>Customer/CompanyName}"/>
                    <ObjectAttribute text="Shipped: {orders>ShippedDate}"/>
                </ObjectListItem>
            </List>
        </content>
        </Page>
    </App>
</mvc:View>